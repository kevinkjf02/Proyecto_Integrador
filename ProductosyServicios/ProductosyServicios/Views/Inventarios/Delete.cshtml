@model ProductosyServicios.Entities.Inventario

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">


<h1>Eliminar</h1>

<h3>Seguro quieres eliminar?</h3>
<div>
    <h4>Inventario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.CodigoProducto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Catalogo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Catalogo.Descripcion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="InventarioId" />
        <button type="submit" class="btn btn-danger"> Eliminar<i class="bi bi-trash"></i></button>
        <a asp-action="Index">Regresar lista</a>
    </form>
</div>
